generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Campos do Supabase Auth
  supabaseId String?  @unique // auth.users.id
  email      String?  @unique
  phoneE164  String?  @unique
  
  // Campos customizados
  name       String?
  city       String?  // Cidade do usuário
  verified   Boolean  @default(false)  // Telefone verificado
  role       UserRole @default(USER)
  
  // Campos para página pública do corretor
  slug       String?  @unique // URL personalizada (ex: joao-silva)
  bio        String?  // Biografia do corretor
  avatar     String?  // URL da foto de perfil
  company    String?  // Nome da empresa
  specialties Json?   // Array de especialidades
  socialLinks Json?   // Links para redes sociais
  
  // Relacionamentos
  properties   Property[]
  lists        List[]
  comments     Comment[]
  events       Event[]
  memberships  HouseholdMember[]
  preferences  UserPreferences?
  addedItems   ListItem[] // ← ADICIONAR ESTE CAMPO

  @@index([phoneE164])
  @@index([email])
  @@index([supabaseId])
  @@index([slug])
}

model Household {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  members   HouseholdMember[]
  lists     List[]
  
  // Adicionar campo para lista padrão do grupo
  defaultList List? @relation("HouseholdDefaultList", fields: [defaultListId], references: [id])
  defaultListId String? @unique
}

model HouseholdMember {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  household    Household @relation(fields: [householdId], references: [id])
  householdId  String
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  role         MemberRole @default(MEMBER)
  status       MembershipStatus @default(PENDING)
  invitedBy    String?  // ID do usuário que convidou
  invitedAt    DateTime? // Quando foi convidado
  respondedAt  DateTime? // Quando respondeu ao convite
}

enum MemberRole {
  OWNER
  MEMBER
}

enum UserRole {
  USER
  BROKER
  ADMIN
}

enum MembershipStatus {
  PENDING    // Convite pendente
  ACCEPTED   // Convite aceito
  DECLINED   // Convite recusado
}

model Property {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  createdBy    User?    @relation(fields: [createdByUserId], references: [id])
  createdByUserId String?

  sourceUrl    String
  title        String?

  // Preços e características
  price        Int?     @db.Integer // BRL
  m2           Int?     @db.Integer
  condo        Int?     @db.Integer // mensal
  iptu         Int?     @db.Integer // anual
  rooms        Int?     @db.Integer
  parking      Int?     @db.Integer

  
  // Localização expandida
  neigh        String?  // bairro
  city         String?  // cidade
  state        String?  // estado
  zipCode      String?  // CEP
  
  // Score e análise
  score        Int?     // 0-100
  scoreReasons Json?
  photos       Json?

  // Relacionamentos
  lists        ListItem[]
  comments     Comment[]  // ← ADICIONAR ESTE CAMPO

  // Índices para consultas frequentes
  @@index([price])
  @@index([m2])
  @@index([score])
  @@index([city, neigh])
  @@index([createdAt])

  // Status do imóvel
  status      PropertyStatus @default(ACTIVE)
  
  // Informações adicionais
  description String?
  amenities   Json?        // comodidades (array)
  contactInfo Json?        // informações de contato
  
  // Metadados de parsing
  lastParsedAt DateTime?
  parseAttempts Int        @default(0)
  parseErrors   Json?
}

enum PropertyStatus {
  ACTIVE
  SOLD
  RENTED
  INACTIVE
  PENDING
}

model List {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  name          String
  owner         User?    @relation(fields: [ownerId], references: [id])
  ownerId       String?
  household     Household? @relation(fields: [householdId], references: [id])
  householdId   String?
  
  // Relacionamento com lista padrão do household
  householdDefault Household? @relation("HouseholdDefaultList")
  
  brokerId      String?
  publicSlug    String?  @unique
  isDefault     Boolean  @default(false) // Indica se é a lista padrão do grupo

  items         ListItem[]

  @@index([publicSlug])
  @@index([brokerId])
  @@index([householdId])
}

model ListItem {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  list       List     @relation(fields: [listId], references: [id])
  listId     String
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  notes      String?
  favorite   Boolean  @default(false)
  score      Int?
  
  // Adicionar campo para indicar quem adicionou ao grupo
  addedBy    User?    @relation(fields: [addedById], references: [id])
  addedById  String?
  
  @@index([listId])
  @@index([propertyId])
}

model Comment {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  text       String
  
  // Adicionar campo para comentários anônimos
  isAnonymous Boolean @default(false)
}

model Event {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  type       String
  payload    Json?
}

// Preferências do usuário
model UserPreferences {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relacionamento com usuário (1:1)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  
  // Preferências de preço
  minPrice  Int?     // Preço mínimo em centavos
  maxPrice  Int?     // Preço máximo em centavos
  
  // Preferências de área
  minArea   Int?     // Área mínima em m²
  maxArea   Int?     // Área máxima em m²
  
  // Preferências de localização
  neighborhoods Json? // Array de bairros preferidos
  
  // Preferências de tipo de imóvel
  propertyTypes Json? // Array de tipos preferidos
  
  // Preferências de estacionamento
  minParking Int?    // Mínimo de vagas
  
  // Configurações de notificação
  notifications Json? // Objeto com configurações de notificação
  
  @@index([userId])
}

// Nova tabela para verificação de telefone
model PhoneVerification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  phoneE164 String
  code      String   // Código de 6 dígitos
  expiresAt DateTime // Expira em 10 minutos
  verified  Boolean  @default(false)
  attempts  Int      @default(0) // Tentativas de verificação
  
  @@index([phoneE164])
  @@index([code])
}
